param backgroundColor = '#F5F5F5'
param foregroundColor = '#333333'
param primaryColor = '#FFC0CB'

class root {
  display: grid;
  height: 100vh;
  grid-template-rows: auto 1fr auto;
}

component Header {
  div(class="border-b-2 border-grey") {
    h1 { "Hello" }
  }
}

component Footer {
  div(class="flex justify-between border-t-2 border-grey") { 
    button { "Cancel" }
    button { "Ok" }
  }
}

render component MyApp {
  StdPage(backgroundColor, foregroundColor) {
    div(class="root") {
      Header
      div {
        "This is the body"
      }
      Footer
    }
  }
}